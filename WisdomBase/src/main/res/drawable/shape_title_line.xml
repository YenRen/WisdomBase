<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- 阴影部分 最下面一层 -->
        <item >
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="270"
                    android:endColor="@color/transparent_00"
                    android:startColor="@color/title_shadow"/>
                <corners android:radius="1dp" />
            </shape>
        </item>
        <!-- 背景部分 -->
        <!-- 形象的表达：bottom left ... 类似于设置 margin -->
        <item
            android:right="5dp"
            android:bottom="5dp">
            <selector>
                <item android:state_focused="false" android:state_pressed="true" >
                    <shape android:shape="rectangle" >
                        <solid android:color="#C5C5C5"/>
                        <corners android:radius="1dp" />
                    </shape>
                </item>
                <item>
                    <shape android:shape="rectangle" >
                        <solid android:color="#C5C5C5"/>
                        <corners android:radius="1dp" />
                    </shape>
                </item>
            </selector>
        </item>

</layer-list>