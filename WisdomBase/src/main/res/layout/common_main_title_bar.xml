<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48dp"
    android:background="@drawable/translation_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/home_title_bar_default_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/home_title_bar_title_tv"
                    style="@style/textstyle_titlebar"
                    android:gravity="center"
                    android:text="标题"
                    android:textColor="#010000" />

                <ImageView
                    android:id="@+id/home_title_bar_title_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_title_main"
                    android:visibility="gone" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_13dp">


                <ImageView
                    android:id="@+id/home_title_bar_search_iv"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_13dp"
                    android:background="@drawable/btn_search_selector"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/home_title_bar_setting_iv"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_marginRight="@dimen/dimen_13dp"
                    android:background="@mipmap/person_setting_icon"
                    android:visibility="visible" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"-->
<!--        android:background="@drawable/translation_bg" />-->

</LinearLayout>